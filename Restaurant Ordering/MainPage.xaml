    mc:Ignorable="d">

    <Grid Background="Black" Margin="0,-3,0,3">
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="201" Margin="35,82,0,0" Stroke="Black" VerticalAlignment="Top" Width="282"/>
